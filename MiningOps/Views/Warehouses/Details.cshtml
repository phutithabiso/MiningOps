@model MiningOps.Entity.Warehouse

@{
    ViewData["Title"] = "Warehouse Details";
}
<partial name="_Messages" />

<div class="site1">
    <div class="page-header">
        <h1><i class="fas fa-warehouse"></i> Warehouse Details</h1>
        <p class="lead">View complete warehouse information and inventory details</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-info-circle"></i> Warehouse Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Warehouse Summary -->
                <div class="col-md-4">
                    <div class="text-center mb-4">
                        <div class="warehouse-icon bg-primary text-white mx-auto mb-3">
                            <i class="fas fa-warehouse fa-3x"></i>
                        </div>
                        <h3>@Model.Name</h3>
                        <span class="badge bg-success badge-lg">
                            <i class="fas fa-map-marker-alt"></i> Active
                        </span>
                    </div>

                    <div class="warehouse-quick-info">
                        <div class="info-item">
                            <i class="fas fa-map-marker-alt text-primary"></i>
                            <strong>Location:</strong>
                            <span>@Model.Location</span>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-calendar-plus text-success"></i>
                            <strong>Created:</strong>
                            <span>@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-clock text-info"></i>
                            <strong>Active For:</strong>
                            <span>@((DateTime.Now - Model.CreatedAt).Days) days</span>
                        </div>
                    </div>

                    <!-- Quick Stats -->
                    <div class="quick-stats mt-4 p-3 rounded bg-light">
                        <h6><i class="fas fa-chart-bar"></i> Quick Stats</h6>
                        <div class="stat-item">
                            <i class="fas fa-boxes text-warning"></i>
                            <span>Total Items: <strong>0</strong></span>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-pallet text-info"></i>
                            <span>Capacity: <strong>Unlimited</strong></span>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-check-circle text-success"></i>
                            <span>Status: <strong>Operational</strong></span>
                        </div>
                    </div>
                </div>

                <!-- Detailed Information -->
                <div class="col-md-8">
                    <div class="details-section">
                        <h6 class="section-title"><i class="fas fa-building"></i> Basic Information</h6>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="detail-item">
                                    <label>Warehouse Name</label>
                                    <div class="detail-value">@Model.Name</div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="detail-item">
                                    <label>Location</label>
                                    <div class="detail-value">@Model.Location</div>
                                </div>
                            </div>
                        </div>

                        <h6 class="section-title mt-4"><i class="fas fa-sticky-note"></i> Notes & Description</h6>
                        <div class="detail-item">
                            <label>Additional Notes</label>
                            <div class="detail-value notes-content">
                                @if (!string.IsNullOrEmpty(Model.Notes))
                                {
                                    @Model.Notes
                                }
                                else
                                {
                                    <span class="text-muted">No additional notes provided</span>
                                }
                            </div>
                        </div>

                        <h6 class="section-title mt-4"><i class="fas fa-history"></i> Timeline</h6>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="detail-item">
                                    <label><i class="fas fa-plus-circle text-success"></i> Created At</label>
                                    <div class="detail-value">@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")</div>
                                </div>
                            </div>
                           
                        </div>

                        <!-- Map Preview (Placeholder) -->
                        <h6 class="section-title mt-4"><i class="fas fa-map"></i> Location Map</h6>
                        <div class="map-preview p-4 text-center bg-light rounded">
                            <i class="fas fa-map-marked-alt fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Map preview for: <strong>@Model.Location</strong></p>
                            <small class="text-muted">Interactive map integration available</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer">
            <div class="action-buttons text-center">
                <a asp-action="Edit" asp-route-id="@Model.WarehouseId" class="btn btn-primary btn-lg">
                    <i class="fas fa-edit"></i> Edit Warehouse
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <button class="btn btn-info btn-lg ms-2" onclick="window.print()">
                    <i class="fas fa-print"></i> Print Details
                </button>
                
                <a asp-controller="Inventory" asp-action="Create" class="btn btn-success btn-lg ms-2">
                    <i class="fas fa-plus"></i> Add Inventory
                </a>
            </div>
        </div>
    </div>

    <!-- Inventory Section (Placeholder for future expansion) -->
    <div class="card shadow-sm mt-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-boxes"></i> Inventory Overview</h5>
        </div>
        <div class="card-body">
            <div class="text-center py-4">
                <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                <h5>No Inventory Items</h5>
                <p class="text-muted">This warehouse currently has no inventory items.</p>
                <a asp-controller="Inventory" asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Add First Item
                </a>
            </div>
        </div>
    </div>

</div>

