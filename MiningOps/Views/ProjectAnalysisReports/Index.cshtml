@model IEnumerable<MiningOps.Models.PurchaseOrderViewModel>

@{
    ViewData["Title"] = "Purchase Orders";
}

<div class="page-header">
    <h1><i class="fas fa-file-invoice-dollar"></i> Purchase Orders</h1>
    <p class="lead">Manage and track all purchase orders</p>
</div>

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-list"></i> Purchase Orders List</h5>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus-circle"></i> Create New
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-container">
            <table class="table table-striped table-hover">
                <thead class="table-header">
                    <tr>
                        <th>Requested By</th>
                        <th>Currency</th>
                        <th>Status</th>
                        <th>Expected Delivery</th>
                        <th>Total Amount</th>
                        <th>Material Request</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-row">
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.RequestedBy)</strong>
                            </td>
                            <td>
                                <span class="currency-badge">@Html.DisplayFor(modelItem => item.Currency)</span>
                            </td>
                            <td>
                                <span class="status-badge status-@item.Status.ToString().ToLower()">
                                    @Html.DisplayFor(modelItem => item.Status)
                                </span>
                            </td>
                            <td>
                                @if (item.ExpectedDeliveryDate.HasValue)
                                {
                                    @item.ExpectedDeliveryDate.Value.ToString("MMM dd, yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Not set</span>
                                }
                            </td>
                            <td class="amount-cell">
                                @item.Currency@Html.DisplayFor(modelItem => item.TotalAmount)
                            </td>
                            <td>
                                @if (item.MaterialRequestId.HasValue)
                                {
                                    <span class="material-request-badge">MR#@Html.DisplayFor(modelItem => item.MaterialRequestId)</span>
                                }
                                else
                                {
                                    <span class="text-muted">None</span>
                                }
                            </td>
                           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        margin: -2rem -2rem 2rem -2rem;
        border-radius: 0 0 20px 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .page-header h1 {
        margin: 0;
        font-weight: 700;
        font-size: 2.5rem;
    }

    .page-header .lead {
        opacity: 0.9;
        margin: 0.5rem 0 0 0;
        font-size: 1.2rem;
    }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        margin-bottom: 2rem;
    }

    .card-header {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        border-radius: 15px 15px 0 0 !important;
        padding: 1.5rem;
        border: none;
    }

    .card-header h5 {
        margin: 0;
        font-weight: 600;
        font-size: 1.3rem;
    }

    .card-body {
        padding: 0;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 10px 20px;
        font-weight: 600;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .table-container {
        background: white;
        border-radius: 0 0 15px 15px;
        width: 100%;
        overflow: visible;
    }

    .table {
        width: 100%;
        margin-bottom: 0;
        border-collapse: collapse;
    }

    .table-header {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        color: #495057;
    }

    .table-header th {
        padding: 15px 12px;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        border: none;
        border-bottom: 2px solid #dee2e6;
    }

    /* Set specific column widths */
    .table-header th:nth-child(1) { /* Requested By */
        width: 20%;
    }

    .table-header th:nth-child(2) { /* Currency */
        width: 10%;
    }

    .table-header th:nth-child(3) { /* Status */
        width: 15%;
    }

    .table-header th:nth-child(4) { /* Expected Delivery */
        width: 15%;
    }

    .table-header th:nth-child(5) { /* Total Amount */
        width: 15%;
    }

    .table-header th:nth-child(6) { /* Material Request */
        width: 15%;
    }

    .table-header th:nth-child(7) { /* Actions */
        width: 10%;
    }

    .table-row {
        transition: all 0.3s ease;
        border-bottom: 1px solid #f0f0f0;
    }

    .table-row:hover {
        background-color: #f8f9fa;
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .table-row td {
        padding: 15px 12px;
        vertical-align: middle;
        border: none;
        font-size: 0.95rem;
    }

    .currency-badge {
        background: linear-gradient(135deg, #e9ecef, #dee2e6);
        color: #495057;
        padding: 6px 10px;
        border-radius: 6px;
        font-size: 0.8rem;
        font-weight: 600;
        font-family: 'Courier New', monospace;
    }

    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: capitalize;
        letter-spacing: 0.5px;
    }

    .status-pending {
        background: linear-gradient(135deg, #fff3cd, #ffeaa7);
        color: #856404;
        border: 1px solid #ffeaa7;
    }

    .status-approved {
        background: linear-gradient(135deg, #d4edda, #c3e6cb);
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .status-completed {
        background: linear-gradient(135deg, #d1ecf1, #b8daff);
        color: #0c5460;
        border: 1px solid #b8daff;
    }

    .status-cancelled {
        background: linear-gradient(135deg, #f8d7da, #f5c6cb);
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .status-processing {
        background: linear-gradient(135deg, #cce7ff, #b3d9ff);
        color: #004085;
        border: 1px solid #b3d9ff;
    }

    .amount-cell {
        font-weight: 700;
        color: #28a745;
        font-family: 'Courier New', monospace;
        font-size: 1rem;
    }

    .material-request-badge {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        padding: 6px 10px;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 600;
        font-family: 'Courier New', monospace;
    }

    .action-buttons {
        white-space: nowrap;
        text-align: center;
    }

    .action-buttons .btn {
        margin: 0 2px;
        border-radius: 8px;
        font-size: 0.8rem;
        padding: 6px 10px;
        transition: all 0.3s ease;
        border: 2px solid;
    }

    .action-buttons .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .page-header {
            margin: -1rem -1rem 2rem -1rem;
            padding: 1.5rem 1rem;
            border-radius: 0 0 15px 15px;
        }

        .page-header h1 {
            font-size: 2rem;
        }

        .card-header {
            padding: 1rem;
        }

        .table-container {
            overflow-x: auto;
        }

        .table-header th {
            width: auto !important;
            padding: 12px 8px;
            font-size: 0.75rem;
        }

        .table-row td {
            padding: 12px 8px;
            font-size: 0.85rem;
        }

        .action-buttons .btn {
            display: inline-block;
            margin: 1px;
            padding: 4px 8px;
        }

        .btn-primary {
            padding: 8px 16px;
            font-size: 0.9rem;
        }

        .currency-badge,
        .status-badge,
        .material-request-badge {
            font-size: 0.7rem;
            padding: 4px 8px;
        }
    }

    /* Animation for table rows */
    .table-row {
        animation: fadeInUp 0.5s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

