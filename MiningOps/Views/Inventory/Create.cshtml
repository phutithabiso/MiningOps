@model MiningOps.Models.InvetoryViewModel

@{
    ViewData["Title"] = "Create Inventory Item";
}
<link rel="stylesheet" href="~/css/site1.css" asp-append-version="true" />

<!-- Font Awesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="site1">
    <div class="page-header">
        <h1><i class="fas fa-boxes"></i> Create Inventory Item</h1>
        <p class="lead">Add new items to your warehouse inventory</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-plus-circle"></i> Item Information</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" class="form-container">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            <label asp-for="ItemName" class="form-label">
                                <i class="fas fa-tag"></i> Item Name *
                            </label>
                            <input asp-for="ItemName" class="form-control form-control-lg" placeholder="Enter item name" />
                            <span asp-validation-for="ItemName" class="text-danger validation-message"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left"></i> Description
                            </label>
                            <textarea asp-for="Description" class="form-control form-control-lg" placeholder="Enter item description..." rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger validation-message"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="WarehouseId" class="form-label">
                                <i class="fas fa-warehouse"></i> Warehouse *
                            </label>
                            <select asp-for="WarehouseId" class="form-select form-control-lg" asp-items="ViewBag.WarehouseId">
                                <option value="">-- Select Warehouse --</option>
                            </select>
                            <span asp-validation-for="WarehouseId" class="text-danger validation-message"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            <label asp-for="Quantity" class="form-label">
                                <i class="fas fa-hashtag"></i> Quantity *
                            </label>
                            <input asp-for="Quantity" type="number" class="form-control form-control-lg" placeholder="Enter quantity" min="0" />
                            <span asp-validation-for="Quantity" class="text-danger validation-message"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="UnitCost" class="form-label">
                                <i class="fas fa-money-bill-wave"></i> Unit Cost *
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="UnitCost" type="number" step="0.01" class="form-control form-control-lg" placeholder="0.00" min="0" />
                            </div>
                            <span asp-validation-for="UnitCost" class="text-danger validation-message"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ReorderLevel" class="form-label">
                                <i class="fas fa-exclamation-triangle"></i> Reorder Level
                            </label>
                            <input asp-for="ReorderLevel" type="number" class="form-control form-control-lg" placeholder="0" min="0" />
                            <span asp-validation-for="ReorderLevel" class="text-danger validation-message"></span>
                            <small class="form-text text-muted">Alert when stock reaches this level</small>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            <label asp-for="Unit" class="form-label">
                                <i class="fas fa-balance-scale"></i> Unit
                            </label>
                            <select asp-for="Unit" class="form-select form-control-lg">
                                <option value="">-- Select Unit --</option>
                                <option value="Pieces">Pieces</option>
                                <option value="Kg">Kilograms</option>
                                <option value="Ton">Tons</option>
                                <option value="Litre">Litres</option>
                                <option value="Meter">Meters</option>
                                <option value="Box">Boxes</option>
                                <option value="Pack">Packs</option>
                                <option value="Barrel">Barrels</option>
                                <option value="Bag">Bags</option>
                                <option value="Roll">Rolls</option>
                                <option value="Set">Sets</option>
                            </select>
                            <span asp-validation-for="Unit" class="text-danger validation-message"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            <label asp-for="LastUpdated" class="form-label">
                                <i class="fas fa-calendar-alt"></i> Last Updated
                            </label>
                            <input asp-for="LastUpdated" type="datetime-local" class="form-control form-control-lg" />
                            <span asp-validation-for="LastUpdated" class="text-danger validation-message"></span>
                            <small class="form-text text-muted">Leave empty to use current date and time</small>
                        </div>
                    </div>
                </div>

                <!-- Total Value Display -->
                <div class="total-value-section p-4 border rounded bg-light mb-4">
                    <div class="row">
                        <div class="col-md-6">
                            <h6><i class="fas fa-calculator"></i> Financial Summary</h6>
                            <div class="total-value-display">
                                <strong>Total Value:</strong> $<span id="totalValue">0.00</span>
                            </div>
                            <small class="form-text text-muted">Calculated: Quantity × Unit Cost</small>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-chart-bar"></i> Stock Status</h6>
                            <div class="stock-status-display">
                                <span id="stockStatus" class="badge bg-secondary">Unknown</span>
                            </div>
                            <small class="form-text text-muted">Based on quantity and reorder level</small>
                        </div>
                    </div>
                </div>

                <div class="form-actions mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save"></i> Create Inventory Item
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="reset" class="btn btn-outline-secondary btn-lg ms-2">
                        <i class="fas fa-undo"></i> Reset Form
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/site.js"></script>
    <script>
      
    </script>
}

