@model MiningOps.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<partial name="_Messages" />

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1 class="login-title">Welcome Back</h1>
            <p class="login-subtitle">Sign in to your account</p>
        </div>

        <form asp-action="Login" class="login-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <div class="form-group">
                <label asp-for="usernameoremail" class="form-label"></label>
                <div class="input-group">
                    <span class="input-icon">
                        <i class="fas fa-user"></i>
                    </span>
                    <input asp-for="usernameoremail" class="form-control" placeholder="Enter your username or email" />
                </div>
                <span asp-validation-for="usernameoremail" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="password" class="form-label"></label>
                <div class="input-group">
                    <span class="input-icon">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input asp-for="password" type="password" class="form-control" placeholder="Enter your password" />
                </div>
                <span asp-validation-for="password" class="validation-message"></span>
            </div>


            <div class="form-options">
            
                <a href="#" class="forgot-password">Forgot password?</a>
            </div>

            <button type="submit" class="login-btn">
                <span class="btn-text">Sign In</span>
                <span class="btn-icon">→</span>
            </button>
        </form>

   
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
       

        .login-container {
            width: 100%;
            max-width: 420px;
            margin: 0 auto;
           min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            background: white;
            border-radius: 16px;
            padding: 80px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(12px);
            /* make border thicker */
            border: 3px solid #667eea;
        }

        .login-title {
            color: #2d3748;
            font-size: 32px;
            font-weight: 800; 
            margin-bottom: 12px;
        }

        .form-label {
            font-weight: 600; 
            font-size: 15px;
        }

        .form-control {
            width: 100%;
            padding: 14px 14px 14px 44px;
            border: 3px solid #a0aec0; /* thicker */
            border-radius: 10px;
            font-size: 15px;
            font-weight: 500;
            background: #f7fafc;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                outline: none;
                border-color: #5a67d8;
                background: white;
                box-shadow: 0 0 0 4px rgba(90, 103, 216, 0.2);
            }

        /* Login button thicker */
        .login-btn {
            width: 100%;
            background: linear-gradient(135deg, #667aea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 16px;
            border-radius: 10px;
            font-size: 18px;
            font-weight: 700; /* thicker text */
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

            .login-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 12px 25px rgba(102, 126, 234, 0.35);
            }

    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}