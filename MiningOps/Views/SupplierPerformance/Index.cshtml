@model IEnumerable<MiningOps.Entity.SupplierPerformance>

@{
    ViewData["Title"] = "Supplier Performance";
}

<div class="page-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <h1><i class="fas fa-chart-line"></i> Supplier Performance</h1>
            <p class="lead text-muted">Track and manage supplier performance metrics</p>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Performance Record
            </a>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Performance Overview</h5>
        <span class="badge bg-light text-dark">@Model.Count() Records</span>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Supplier</th>
                        <th>Report Date</th>
                        <th>On-Time Delivery</th>
                        <th>Quality Rating</th>
                        <th>Compliance Score</th>
                        <th>Performance Score</th>
                        <th>Rating</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var overallScore = (item.OnTimeDeliveryRate + item.QualityRating + item.ComplianceScore) / 3;
                        var performanceClass = overallScore >= 8.0m ? "success" :
                        overallScore >= 6.0m ? "warning" : "danger";
                        var performanceText = overallScore >= 8.0m ? "Excellent" :
                        overallScore >= 6.0m ? "Good" : "Needs Improvement";

                        <tr>
                            <td>
                                <div class="fw-bold">@item.Supplier?.CompanyName</div>
                                <small class="text-muted">@item.Supplier?.ContactPerson</small>
                            </td>
                            <td>@item.ReportDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="progress flex-grow-1 me-2" style="height: 20px;">
                                        <div class="progress-bar @(item.OnTimeDeliveryRate >= 0.9m ? "bg-success" : (item.OnTimeDeliveryRate >= 0.7m ? "bg-warning" : "bg-danger"))"
                                             style="width: @(Convert.ToDouble(item.OnTimeDeliveryRate * 100))%">
                                        </div>
                                    </div>
                                    <span class="fw-bold">@(item.OnTimeDeliveryRate.ToString("P0"))</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="fw-bold me-2">@item.QualityRating.ToString("F1")</span>
                                    <div class="rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= Math.Round((double)item.QualityRating / 2))
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star text-warning"></i>
                                            }
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-primary">@item.ComplianceScore.ToString("F1")</span>
                            </td>
                            <td>
                                <span class="badge bg-@performanceClass">
                                    @overallScore.ToString("F1")
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-@performanceClass">@performanceText</span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@item.PerformanceId" class="btn btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.PerformanceId" class="btn btn-outline-info" title="Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.PerformanceId" class="btn btn-outline-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card-body text-center text-muted py-5">
            <i class="fas fa-chart-line fa-3x mb-3"></i>
            <h5>No performance records found</h5>
            <p class="mb-0">Start tracking supplier performance by adding your first record.</p>
            <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="fas fa-plus"></i> Add First Record
            </a>
        </div>
    }
</div>

<!-- Performance Summary Cards -->
@if (Model.Any())
{
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <div class="h4 mb-0">@Model.Average(p => p.OnTimeDeliveryRate).ToString("P1")</div>
                    <small>Avg. Delivery Rate</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <div class="h4 mb-0">@Model.Average(p => p.QualityRating).ToString("F1")</div>
                    <small>Avg. Quality Rating</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <div class="h4 mb-0">@Model.Average(p => p.ComplianceScore).ToString("F1")</div>
                    <small>Avg. Compliance</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    @{
                        var avgOverall = Model.Average(p => (p.OnTimeDeliveryRate + p.QualityRating + p.ComplianceScore) / 3);
                    }
                    <div class="h4 mb-0">@avgOverall.ToString("F1")</div>
                    <small>Overall Score</small>
                </div>
            </div>
        </div>
    </div>
}

@section Styles {
    <style>
        .rating {
            font-size: 0.8rem;
        }

        .table th {
            font-weight: 600;
            border-top: none;
        }

        .progress {
            border-radius: 4px;
        }

        .badge {
            font-size: 0.75em;
        }
    </style>
}