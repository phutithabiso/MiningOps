@model IEnumerable<MiningOps.Entity.Payment>

@{
    ViewData["Title"] = "Index";
    var pageNumber = ViewBag.PageNumber ?? 1;
    var pageSize = ViewBag.PageSize ?? 10;
    var totalPages = ViewBag.TotalPages ?? 1;
    var totalCount = ViewBag.TotalCount ?? 0;
}

<div class="page-header">
    <h1><i class="fas fa-credit-card"></i> Payments</h1>
    <p class="lead">Manage and track all payment transactions</p>
</div>

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-list"></i> Payments List</h5>
            <div class="btn-group">
                <a asp-controller="Invoices" asp-action="Index" class="btn btn-info btn-lg me-2">
                    <i class="fas fa-file-invoice"></i> Invoices
                </a>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus-circle"></i> Create New
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <!-- Summary Stats -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="stat-card text-center p-3 rounded">
                    <div class="stat-value text-primary">@totalCount</div>
                    <div class="stat-label">Total Payments</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card text-center p-3 rounded">
                    <div class="stat-value text-success">$@(Model.Sum(p => p.Amount).ToString("N2"))</div>
                    <div class="stat-label">Total Amount</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card text-center p-3 rounded">
                    <div class="stat-value text-info">@(Model.Count(p => p.PaidDate.Date == DateTime.Today))</div>
                    <div class="stat-label">Today's Payments</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card text-center p-3 rounded">
                    <div class="stat-value text-warning">@pageNumber</div>
                    <div class="stat-label">Current Page</div>
                </div>
            </div>
        </div>

        <div class="table-container">
            <table class="table table-striped table-hover">
                <thead class="table-header">
                    <tr>
                        <th>Invoice</th>
                        <th>Payment Date</th>
                        <th>Amount</th>
                        <th>Approved By</th>
                        <th>Reference</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-row">
                            <td>
                                <span class="invoice-badge">INV#@Html.DisplayFor(modelItem => item.Invoice.InvoiceId)</span>
                            </td>
                            <td>
                                @item.PaidDate.ToString("MMM dd, yyyy")
                            </td>
                            <td class="amount-cell">
                                $@Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ApprovedBy.Email)
                            </td>
                            <td>
                                <span class="reference-badge">@Html.DisplayFor(modelItem => item.PaymentReference)</span>
                            </td>
                            <td class="action-buttons">
                                @* <a asp-action="Edit" asp-route-id="@item.PaymentId" class="btn btn-sm btn-outline-primary" title="Edit"> 
                                    <i class="fas fa-edit"></i> 
                                 </a> *@
                                <a asp-action="Details" asp-route-id="@item.PaymentId" class="btn btn-sm btn-outline-info" title="Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.PaymentId" class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    <!-- Previous Page -->
                    <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { pageNumber = pageNumber - 1, pageSize = pageSize })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    <!-- Page Numbers -->
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        if (i == 1 || i == totalPages || (i >= pageNumber - 2 && i <= pageNumber + 2))
                        {
                            <li class="page-item @(i == pageNumber ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, pageSize = pageSize })">@i</a>
                            </li>
                        }
                        else if (i == pageNumber - 3 || i == pageNumber + 3)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                    }

                    <!-- Next Page -->
                    <li class="page-item @(pageNumber == totalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { pageNumber = pageNumber + 1, pageSize = pageSize })" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }

        <!-- Page Size Selector -->
        <div class="row mt-3">
            <div class="col-md-6">
                <div class="d-flex align-items-center">
                    <span class="me-2">Show:</span>
                    <select class="form-select form-select-sm page-size-selector" style="width: auto;">
                        <option value="10" selected="@(pageSize == 10)">10</option>
                        <option value="25" selected="@(pageSize == 25)">25</option>
                        <option value="50" selected="@(pageSize == 50)">50</option>
                        <option value="100" selected="@(pageSize == 100)">100</option>
                    </select>
                    <span class="ms-2">entries per page</span>
                </div>
            </div>
            <div class="col-md-6 text-end">
                <span class="text-muted">
                    Showing @((pageNumber - 1) * pageSize + 1) to @Math.Min(pageNumber * pageSize, totalCount) of @totalCount entries
                </span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Page size selector
            const pageSizeSelector = document.querySelector('.page-size-selector');
            if (pageSizeSelector) {
                pageSizeSelector.addEventListener('change', function() {
                    const pageSize = this.value;
                    const url = new URL(window.location.href);
                    url.searchParams.set('pageSize', pageSize);
                    url.searchParams.set('pageNumber', '1'); // Reset to first page
                    window.location.href = url.toString();
                });
            }
        });
    </script>
}

<style>
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        margin: -2rem -2rem 2rem -2rem;
        border-radius: 0 0 20px 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .page-header h1 {
            margin: 0;
            font-weight: 700;
            font-size: 2.5rem;
        }

        .page-header .lead {
            opacity: 0.9;
            margin: 0.5rem 0 0 0;
            font-size: 1.2rem;
        }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        margin-bottom: 2rem;
    }

    .card-header {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        border-radius: 15px 15px 0 0 !important;
        padding: 1.5rem;
        border: none;
    }

        .card-header h5 {
            margin: 0;
            font-weight: 600;
            font-size: 1.3rem;
        }

    .card-body {
        padding: 1.5rem;
    }

    .btn-group {
        display: flex;
        gap: 0.5rem;
    }

    .btn-info {
        background: linear-gradient(135deg, #17a2b8, #138496);
        border: none;
        color: white;
    }

        .btn-info:hover {
            background: linear-gradient(135deg, #138496, #117a8b);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(23, 162, 184, 0.3);
            color: white;
        }

    .stat-card {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        border: 1px solid #dee2e6;
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .stat-value {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
    }

    .stat-label {
        font-size: 0.875rem;
        color: #6c757d;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .table-container {
        background: white;
        border-radius: 10px;
        width: 100%;
        overflow: visible;
    }

    .table {
        width: 100%;
        margin-bottom: 0;
        border-collapse: collapse;
        table-layout: fixed;
    }

    .table-header {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        color: #495057;
    }

        .table-header th {
            padding: 15px 12px;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
            border: none;
            border-bottom: 2px solid #dee2e6;
        }

            /* Set specific column widths */
            .table-header th:nth-child(1) { /* Invoice */
                width: 12%;
            }

            .table-header th:nth-child(2) { /* Payment Date */
                width: 15%;
            }

            .table-header th:nth-child(3) { /* Amount */
                width: 12%;
            }

            .table-header th:nth-child(4) { /* Approved By */
                width: 20%;
            }

            .table-header th:nth-child(5) { /* Reference */
                width: 18%;
            }

            .table-header th:nth-child(6) { /* Actions */
                width: 15%;
            }

    .table-row {
        transition: all 0.3s ease;
        border-bottom: 1px solid #f0f0f0;
    }

        .table-row:hover {
            background-color: #f8f9fa;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .table-row td {
            padding: 15px 12px;
            vertical-align: middle;
            border: none;
            font-size: 0.95rem;
        }

    .invoice-badge {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        padding: 6px 12px;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 600;
        font-family: 'Courier New', monospace;
    }

    .amount-cell {
        font-weight: 700;
        color: #28a745;
        font-family: 'Courier New', monospace;
        font-size: 1rem;
    }

    .reference-badge {
        background: linear-gradient(135deg, #e9ecef, #dee2e6);
        color: #495057;
        padding: 6px 10px;
        border-radius: 6px;
        font-size: 0.8rem;
        font-weight: 600;
        font-family: 'Courier New', monospace;
    }

    .action-buttons {
        white-space: nowrap;
        text-align: center;
    }

        .action-buttons .btn {
            margin: 0 2px;
            border-radius: 8px;
            font-size: 0.8rem;
            padding: 6px 10px;
            transition: all 0.3s ease;
            border: 2px solid;
        }

            .action-buttons .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 10px 20px;
        font-weight: 600;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        }

    /* Pagination Styles */
    .pagination .page-item.active .page-link {
        background: linear-gradient(135deg, #007bff, #0056b3);
        border-color: #007bff;
    }

    .pagination .page-link {
        color: #007bff;
        border: 1px solid #dee2e6;
        padding: 0.5rem 0.75rem;
        margin: 0 2px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

        .pagination .page-link:hover {
            background-color: #e9ecef;
            border-color: #adb5bd;
            transform: translateY(-1px);
        }

    .page-size-selector {
        width: auto !important;
        display: inline-block;
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .page-header {
            margin: -1rem -1rem 2rem -1rem;
            padding: 1.5rem 1rem;
            border-radius: 0 0 15px 15px;
        }

            .page-header h1 {
                font-size: 2rem;
            }

        .card-header {
            padding: 1rem;
        }

        .btn-group {
            flex-direction: column;
            width: 100%;
        }

            .btn-group .btn {
                width: 100%;
                margin-bottom: 0.5rem;
            }

        .table {
            table-layout: auto;
        }

        .table-header th {
            width: auto !important;
            padding: 12px 8px;
            font-size: 0.75rem;
        }

        .table-row td {
            padding: 12px 8px;
            font-size: 0.85rem;
        }

        .action-buttons .btn {
            display: inline-block;
            margin: 1px;
            padding: 4px 8px;
        }

        .btn-primary, .btn-info {
            padding: 8px 16px;
            font-size: 0.9rem;
        }

        .invoice-badge,
        .reference-badge {
            font-size: 0.7rem;
            padding: 4px 8px;
        }

        .stat-card {
            margin-bottom: 1rem;
        }

        .pagination {
            flex-wrap: wrap;
        }

            .pagination .page-item {
                margin-bottom: 0.5rem;
            }
    }

    /* Animation for table rows */
    .table-row {
        animation: fadeInUp 0.5s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

