@model MiningOps.Models.PaymentViewModel

@{
    ViewData["Title"] = "Create Payment";
}

<div class="page-header">
    <h1><i class="fas fa-credit-card"></i> Create Payment</h1>
    <p class="lead">Record a new payment transaction</p>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-money-bill-wave"></i> Payment Details</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" class="styled-form">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="InvoiceId" class="form-label">
                            <i class="fas fa-file-invoice"></i> Invoice ID
                        </label>
                        <input asp-for="InvoiceId" class="form-control styled-input" placeholder="Enter invoice number" />
                        <span asp-validation-for="InvoiceId" class="text-danger validation-message"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Amount" class="form-label">
                            <i class="fas fa-dollar-sign"></i> Amount
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Amount" type="number" step="0.01" class="form-control styled-input" placeholder="0.00" />
                        </div>
                        <span asp-validation-for="Amount" class="text-danger validation-message"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="PaidDate" class="form-label">
                            <i class="fas fa-calendar-check"></i> Payment Date
                        </label>
                        <input asp-for="PaidDate" type="date" class="form-control styled-input" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="PaidDate" class="text-danger validation-message"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="ApprovedById" class="form-label">
                            <i class="fas fa-user-check"></i> Approved By
                        </label>
                        <input asp-for="ApprovedById" class="form-control styled-input" placeholder="Enter approver ID" />
                        <span asp-validation-for="ApprovedById" class="text-danger validation-message"></span>
                        <small class="form-text text-muted">User ID of the person who approved this payment</small>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="PaymentReference" class="form-label">
                            <i class="fas fa-receipt"></i> Payment Reference
                        </label>
                        <input asp-for="PaymentReference" class="form-control styled-input" placeholder="Enter payment reference number" />
                        <span asp-validation-for="PaymentReference" class="text-danger validation-message"></span>
                        <small class="form-text text-muted">Transaction ID, check number, or payment reference</small>
                    </div>

                    <!-- Payment Status -->
                    <div class="form-group mb-4">
                        <label class="form-label">
                            <i class="fas fa-info-circle"></i> Payment Information
                        </label>
                        <div class="payment-info-card p-3 rounded">
                            <div class="row">
                                <div class="col-6">
                                    <small class="text-muted">Status:</small>
                                    <div class="fw-bold text-success">Pending</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Created:</small>
                                    <div class="fw-bold">@DateTime.Now.ToString("MMM dd, yyyy")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Payment Details -->
            <div class="row">
                <div class="col-12">
                    <div class="form-group mb-4">
                        <label class="form-label">
                            <i class="fas fa-sticky-note"></i> Notes (Optional)
                        </label>
                        <textarea class="form-control styled-input" rows="3" placeholder="Add any additional payment notes or comments..."></textarea>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fas fa-check-circle"></i> Create Payment
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        margin: -2rem -2rem 2rem -2rem;
        border-radius: 0 0 20px 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .page-header h1 {
            margin: 0;
            font-weight: 700;
            font-size: 2.5rem;
        }

        .page-header .lead {
            opacity: 0.9;
            margin: 0.5rem 0 0 0;
            font-size: 1.2rem;
        }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        margin-bottom: 2rem;
    }

    .card-header {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        border-radius: 15px 15px 0 0 !important;
        padding: 1.5rem;
        border: none;
    }

        .card-header h5 {
            margin: 0;
            font-weight: 600;
            font-size: 1.3rem;
        }

    .card-body {
        padding: 2rem;
    }

    .styled-form {
        max-width: 100%;
    }

    .form-label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.5rem;
        font-size: 1rem;
    }

        .form-label i {
            width: 20px;
            margin-right: 10px;
            color: #007bff;
        }

    .styled-input,
    .styled-select {
        border: 2px solid #e9ecef;
        border-radius: 10px;
        padding: 12px 15px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: #fff;
    }

        .styled-input:focus,
        .styled-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.15);
            background-color: #fff;
        }

        .styled-input:hover,
        .styled-select:hover {
            border-color: #adb5bd;
        }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .validation-message {
        font-size: 0.875rem;
        margin-top: 0.4rem;
        display: block;
    }

    .payment-info-card {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        border: 1px solid #dee2e6;
        border-radius: 8px;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e9ecef;
    }

    .btn-lg {
        padding: 12px 30px;
        font-size: 1.1rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-success {
        background: linear-gradient(135deg, #28a745, #20c997);
        border: none;
    }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
        }

    .btn-secondary {
        background: linear-gradient(135deg, #6c757d, #495057);
        border: none;
    }

        .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(108, 117, 125, 0.3);
        }

    .alert-danger {
        border-radius: 10px;
        border: none;
        background: linear-gradient(135deg, #f8d7da, #f5c6cb);
        color: #721c24;
        padding: 1rem 1.5rem;
    }

    .input-group-text {
        background-color: #e9ecef;
        border: 2px solid #e9ecef;
        border-right: none;
        border-radius: 10px 0 0 10px;
    }

    .input-group .styled-input {
        border-left: none;
        border-radius: 0 10px 10px 0;
    }

        .input-group .styled-input:focus {
            border-left: 2px solid #007bff;
        }

    .form-text {
        font-size: 0.875rem;
        color: #6c757d;
        margin-top: 0.25rem;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .page-header {
            margin: -1rem -1rem 2rem -1rem;
            padding: 1.5rem 1rem;
            border-radius: 0 0 15px 15px;
        }

            .page-header h1 {
                font-size: 2rem;
            }

        .card-body {
            padding: 1.5rem;
        }

        .form-actions {
            flex-direction: column;
        }

        .btn-lg {
            width: 100%;
            margin-bottom: 0.5rem;
        }

        .payment-info-card .row {
            flex-direction: column;
            text-align: center;
        }

        .payment-info-card .col-6 {
            margin-bottom: 0.5rem;
        }
    }

    /* Animation for form elements */
    .styled-input,
    .styled-select {
        animation: fadeIn 0.5s ease-in;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

