@model MiningOps.Models.PaymentViewModel

@{
    ViewData["Title"] = "Create Payment";
}

<div class="page-header">
    <h1><i class="fas fa-credit-card"></i> Create Payment</h1>
    <p class="lead">Record a new payment transaction</p>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-money-bill-wave"></i> Payment Details</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" class="styled-form">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <!-- Invoice Dropdown -->
                    <div class="form-group mb-4">
                        <label asp-for="InvoiceId" class="form-label">
                            <i class="fas fa-file-invoice"></i> Invoice
                        </label>
                        <select asp-for="InvoiceId" class="form-control styled-select" asp-items="ViewBag.InvoiceId">
                            <option value="">-- Select Invoice --</option>
                        </select>
                        <span asp-validation-for="InvoiceId" class="text-danger validation-message"></span>
                    </div>

                    <!-- Amount -->
                    <div class="form-group mb-4">
                        <label asp-for="Amount" class="form-label">
                            <i class="fas fa-dollar-sign"></i> Amount
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Amount" type="number" step="0.01" class="form-control styled-input" placeholder="0.00" readonly />
                        </div>
                        <span asp-validation-for="Amount" class="text-danger validation-message"></span>
                    </div>

                    <!-- Payment Date -->
                    <div class="form-group mb-4">
                        <label asp-for="PaidDate" class="form-label">
                            <i class="fas fa-calendar-check"></i> Payment Date
                        </label>
                        <input asp-for="PaidDate" type="date" class="form-control styled-input" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="PaidDate" class="text-danger validation-message"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <!-- Approved By -->
                    <div class="form-group mb-4">
                        <label asp-for="ApprovedById" class="form-label">
                            <i class="fas fa-user-check"></i> Approved By
                        </label>
                        <select asp-for="ApprovedById" class="form-control styled-select" asp-items="ViewBag.ApprovedById">
                            <option value="">-- Select Approver --</option>
                        </select>
                        <span asp-validation-for="ApprovedById" class="text-danger validation-message"></span>
                    </div>

                    <!-- Payment Reference -->
                    <div class="form-group mb-4">
                        <label asp-for="PaymentReference" class="form-label">
                            <i class="fas fa-receipt"></i> Payment Reference
                        </label>
                        <input asp-for="PaymentReference" class="form-control styled-input" readonly />
                        <span asp-validation-for="PaymentReference" class="text-danger validation-message"></span>
                        <small class="form-text text-muted">Generated automatically when invoice is selected</small>
                    </div>

                    <!-- Payment Info Preview -->
                    <div class="form-group mb-4">
                        <label class="form-label">
                            <i class="fas fa-info-circle"></i> Payment Info
                        </label>
                        <div class="payment-info-card p-3 rounded">
                            <div class="row">
                                <div class="col-6">
                                    <small class="text-muted">Amount:</small>
                                    <div id="amountPreview" class="fw-bold text-success fs-5">$0.00</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Date:</small>
                                    <div id="datePreview" class="fw-bold">@DateTime.Now.ToString("MMM dd, yyyy")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notes -->
            <div class="row">
                <div class="col-12">
                    <div class="form-group mb-4">
                        <label class="form-label">
                            <i class="fas fa-sticky-note"></i> Notes (Optional)
                        </label>
                        <textarea class="form-control styled-input" rows="3" placeholder="Add any additional payment notes or comments..."></textarea>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fas fa-check-circle"></i> Create Payment
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const invoiceSelect = document.querySelector('select[name="InvoiceId"]');
            const amountInput = document.querySelector('input[name="Amount"]');
            const paymentRefInput = document.querySelector('input[name="PaymentReference"]');
            const amountPreview = document.getElementById('amountPreview');
            const datePreview = document.getElementById('datePreview');

            // Invoice totals passed from ViewBag
            const invoiceTotals = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.InvoiceTotals));

            function updatePaymentInfo() {
                const invoiceId = invoiceSelect.value;
                if (!invoiceId || !invoiceTotals[invoiceId]) {
                    amountInput.value = 0;
                    paymentRefInput.value = '';
                    amountPreview.textContent = '$0.00';
                    return;
                }

                const total = invoiceTotals[invoiceId];
                amountInput.value = total.toFixed(2);
                paymentRefInput.value = `PAY-${invoiceId}-${new Date().toISOString().replace(/[-T:.Z]/g, '')}`;
                amountPreview.textContent = '$' + total.toFixed(2);
                datePreview.textContent = new Date().toLocaleDateString('en-US', { year:'numeric', month:'short', day:'numeric' });
            }

            invoiceSelect.addEventListener('change', updatePaymentInfo);

            // Initialize
            updatePaymentInfo();
        });
    </script>
}
