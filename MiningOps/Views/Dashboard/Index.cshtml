@model IEnumerable<MiningOps.Models.SupplierDashboardViewModel>


@{
    ViewData["Title"] = "Supplier Dashboard";
}

<div class="page-header mb-4">
    <h1><i class="fas fa-tachometer-alt"></i> Supplier Dashboard</h1>
    <p class="lead text-muted">Overview of supplier performance and contract activity</p>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-industry"></i> Supplier Summary</h5>
    </div>

    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>Supplier</th>
                    <th>Active Contracts</th>
                    <th>Expiring Soon</th>
                    <th>Avg. Quality Rating</th>
                    <th>Avg. Delivery Rate</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@item.SupplierName</div>
                                <small class="text-muted">@item.ContactPerson</small>
                            </td>

                            <td>
                                <span class="badge bg-success">@item.ActiveContractCount</span>
                            </td>

                            <td>
                                <span class="badge bg-warning text-dark">@item.ExpiringContractCount</span>
                            </td>

                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="me-2">@item.AverageQualityRating.ToString("F1")</span>
                                    <div class="rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= Math.Round(item.AverageQualityRating / 2))
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star text-warning"></i>
                                            }
                                        }
                                    </div>
                                </div>
                            </td>

                            <td>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar @(item.AverageDeliveryRate >= 0.9m ? "bg-success" : (item.AverageDeliveryRate >= 0.7m ? "bg-warning" : "bg-danger"))"
                                         role="progressbar"
                                         style="width: @(Convert.ToDouble(item.AverageDeliveryRate * 100))%;"
                                         aria-valuenow="@(Convert.ToDouble(item.AverageDeliveryRate * 100))"
                                         aria-valuemin="0" aria-valuemax="100">
                                        @(item.AverageDeliveryRate.ToString("P0"))
                                    </div>
                                </div>
                            </td>

                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@item.SupId" class="btn btn-outline-info">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.SupId" class="btn btn-outline-primary">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.SupId" class="btn btn-outline-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            <i class="fas fa-info-circle"></i> No supplier data available.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
