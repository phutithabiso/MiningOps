<!DOCTYPE html>
<html lang="e3n">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiningOps Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site1.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
    @RenderSection("Styles", required: false)
    <style>
       
    </style>
</head>
<body>
    <div class="page-wrapper">
        <!-- Sidebar Navigation -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <span class="app-name">MiningOps</span>Ld
            </div>

            @if (Context.User.Identity!.IsAuthenticated)
            {
                <div class="sidebar-subheader">
                    @if (Context.User.IsInRole("Admin"))
                    {
                        <span>Admin Dashboard</span>
                    }
                    else if (Context.User.IsInRole("Supervisor"))
                    {
                        <span>Supervisor Dashboard</span>
                    }
                    else if (Context.User.IsInRole("Supplier"))
                    {
                        <span>Supplier Portal</span>
                    }
                </div>

                @if (Context.User.IsInRole("Admin"))
                {
                    @await Html.PartialAsync("_AdminSidebar")
                }
                else if (Context.User.IsInRole("Supervisor"))
                {
                    @await Html.PartialAsync("_SupervisorSidebar")
                }
                else if (Context.User.IsInRole("Supplier"))
                {
                    @await Html.PartialAsync("_SupplierSidebar")
                }
            }
            else
            {
                <div class="sidebar-subheader">
                    <span>Welcome</span>
                </div>
                <ul class="sidebar-menu">
                    <li class="menu-item active">
                        <a asp-controller="Account" asp-action="Login">
                            <i class="fa fa-sign-in-alt"></i>
                            <span>Login</span>
                        </a>
                    </li>
                </ul>
            }
        


        </nav>

        <!-- Main Content Area -->
        <div class="content-wrapper">
            <!-- Top Header -->
            <header>
                <nav class="app-header">
                    <div class="left-section">
                        <button class="hamburger-btn" id="sidebarToggle">
                            <i class="fas fa-bars"></i>
                        </button>
                        
                    </div>
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <h1>Welcome, @User.Identity.Name!</h1>
                        <div class="right-section">
                            <button class="hamburger-btn" id="rightToggle">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>

                            <div class="search-bar">
                                <i class="fas fa-search search-icon"></i>
                                <input type="text" class="form-control" placeholder="Search..." />
                            </div>

                            <button class="icon-btn">
                                <i class="fas fa-bell"></i>
                            </button>

                            <div class="dropdown">
                                <button class="dropdown-toggle profile-dropdown-btn" type="button" id="profileDropdown"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                                    <li><a class="dropdown-item" href="#">Profile Settings</a></li>
                                    <li><a class="dropdown-item" href="#">Change Password</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                                </ul>
                            </div>
                        </div>
                    }

                </nav>
            </header>

            <!-- Page Body -->
            <main role="main" class="pb-3 container">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.getElementById("sidebarToggle").addEventListener("click", function () { 
            document.querySelector(".sidebar").classList.toggle("active");
        });
              document.getElementById("rightToggle").addEventListener("click", function () {
            document.querySelector(".right-section").classList.toggle("active");
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>