@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<ul class="sidebar-menu">
    <li class="menu-item @(currentController == "Supervisor" && currentAction == "Dashboard" ? "active" : "")">
        <a asp-controller="Dashboard" asp-action="AdminDashboard">
            <i class="fa fa-tachometer-alt"></i>
            <span>Dashboard</span>
        </a>
    </li>

    <li class="menu-item @(currentController == "Supervisor" && currentAction == "Team" ? "active" : "")">
        <a asp-controller="OrderItems" asp-action="Index">
            <i class="fa fa-user-tie"></i>
            <span>My Team</span>
        </a>
    </li>

    <li class="menu-item @(currentController == "MaterialRequest" ? "active" : "")">
        <a asp-controller="MaterialRequests" asp-action="Index">
            <i class="fa fa-clipboard-list"></i>
            <span>Material Requests</span>
        </a>
    </li>

    <li class="menu-item @(currentController == "Inventory" ? "active" : "")">
        <a asp-controller="Inventorys" asp-action="Index">
            <i class="fa fa-warehouse"></i>
            <span>Inventory</span>
        </a>
    </li>

    <li class="menu-item @(currentController == "Reports" && currentAction == "TeamReports" ? "active" : "")">
        <a asp-controller="Reports" asp-action="Index">
            <i class="fa fa-file-alt"></i>
            <span>Reports</span>
        </a>
    </li>

    <li class="menu-item @(currentController == "Compliance" ? "active" : "")">
        <a asp-controller="Compliance" asp-action="Index">
            <i class="fa fa-clipboard-check"></i>
            <span>Compliance</span>
        </a>
    </li>
</ul>
