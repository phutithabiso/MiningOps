@model MiningOps.Entity.RegisterMining

@{
    ViewData["Title"] = "Edit User";
}

<div class="page-header">
    <h1><i class="fas fa-edit"></i> Edit User</h1>
    <p class="lead">Update user information and permissions</p>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-user-edit"></i> Edit User Information</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post" class="form-container">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="AccId" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="FullName" class="form-label">
                            <i class="fas fa-user"></i> Full Name
                        </label>
                        <input asp-for="FullName" class="form-control form-control-lg" placeholder="Enter full name" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Username" class="form-label">
                            <i class="fas fa-at"></i> Username
                        </label>
                        <input asp-for="Username" class="form-control form-control-lg" placeholder="Enter username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope"></i> Email Address
                        </label>
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter email address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="PhoneNumber" class="form-label">
                            <i class="fas fa-phone"></i> Phone Number
                        </label>
                        <input asp-for="PhoneNumber" class="form-control form-control-lg" placeholder="Enter phone number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="Role" class="form-label">
                            <i class="fas fa-shield-alt"></i> User Role
                        </label>
                        <select asp-for="Role" class="form-select form-select-lg">
                            <option value="">-- Select Role --</option>
                            <option value="Admin">Admin</option>
                            <option value="Supervisor">Supervisor</option>
                            <option value="Supplier">Supplier</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <!-- ✅ NEW PASSWORD FIELD -->
                    <div class="form-group mb-4">
                        <label class="form-label">
                            <i class="fas fa-key"></i> New Password
                        </label>
                        <input type="password" name="Password" class="form-control form-control-lg" placeholder="Enter new password" />
                        <small class="form-text text-muted">Leave blank if you don’t want to change the password</small>
                    </div>

                    <div class="form-group mb-4">
                        <label class="form-label">
                            <i class="fas fa-key"></i> Confirm Password
                        </label>
                        <input type="password" name="ConfirmPassword" class="form-control form-control-lg" placeholder="Confirm new password" />
                    </div>

                    <div class="timeline-info p-3 rounded bg-light">
                        <div class="timeline-item">
                            <i class="fas fa-plus-circle text-success"></i>
                            <strong>Created:</strong>
                            <span>@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</span>
                        </div>
                        <div class="timeline-item">
                            <i class="fas fa-edit text-primary"></i>
                            <strong>Last Updated:</strong>
                            <span>@(Model.UpdatedAt?.ToString("MMM dd, yyyy HH:mm") ?? "Never")</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions mt-4 pt-3 border-top">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <a asp-action="Details" asp-route-id="@Model.AccId" class="btn btn-info btn-lg ms-2">
                    <i class="fas fa-eye"></i> View Details
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- Font Awesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="~/css/site1.css" asp-append-version="true" />
