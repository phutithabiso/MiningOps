@model IEnumerable<MiningOps.Entity.OrderItem>

@{
    ViewData["Title"] = "Index";
}

<div class="page-header">
    <h1><i class="fas fa-boxes"></i> Order Items</h1>
    <p class="lead">Manage all order items and their details</p>
</div>

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-list"></i> Order Items List</h5>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus-circle"></i> Create New
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-container">
            <table class="table table-striped table-hover">
                <thead class="table-header">
                    <tr>
                        <th>Item Name</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total Price</th>
                        <th>Purchase Order</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-row">
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.ItemName)</strong>
                            </td>
                            <td>
                                <span class="quantity-badge">@Html.DisplayFor(modelItem => item.Quantity)</span>
                            </td>
                            <td class="price-cell">
                                $@Html.DisplayFor(modelItem => item.UnitPrice)
                            </td>
                            <td class="total-price-cell">
                                $@((item.Quantity * item.UnitPrice).ToString("N2"))
                            </td>
                            <td>
                                <span class="order-badge">PO#@Html.DisplayFor(modelItem => item.PurchaseOrder.OrderId)</span>
                            </td>
                            <td class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@item.OrderItemId" class="btn btn-sm btn-outline-primary" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.OrderItemId" class="btn btn-sm btn-outline-info" title="Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.OrderItemId" class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        margin: -2rem -2rem 2rem -2rem;
        border-radius: 0 0 20px 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .page-header h1 {
            margin: 0;
            font-weight: 700;
            font-size: 2.5rem;
        }

        .page-header .lead {
            opacity: 0.9;
            margin: 0.5rem 0 0 0;
            font-size: 1.2rem;
        }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        margin-bottom: 2rem;
    }

    .card-header {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        border-radius: 15px 15px 0 0 !important;
        padding: 1.5rem;
        border: none;
    }

        .card-header h5 {
            margin: 0;
            font-weight: 600;
            font-size: 1.3rem;
        }

    .card-body {
        padding: 0;
    }

    .table-container {
        background: white;
        border-radius: 0 0 15px 15px;
        width: 100%;
        overflow: visible;
    }

    .table {
        width: 100%;
        margin-bottom: 0;
        border-collapse: collapse;
        table-layout: fixed;
    }

    .table-header {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        color: #495057;
    }

        .table-header th {
            padding: 15px 12px;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
            border: none;
            border-bottom: 2px solid #dee2e6;
        }

            /* Set specific column widths */
            .table-header th:nth-child(1) { /* Item Name */
                width: 25%;
            }

            .table-header th:nth-child(2), /* Quantity */
            .table-header th:nth-child(3), /* Unit Price */
            .table-header th:nth-child(4) { /* Total Price */
                width: 12%;
            }

            .table-header th:nth-child(5) { /* Purchase Order */
                width: 15%;
            }

            .table-header th:nth-child(6) { /* Actions */
                width: 15%;
            }

    .table-row {
        transition: all 0.3s ease;
        border-bottom: 1px solid #f0f0f0;
    }

        .table-row:hover {
            background-color: #f8f9fa;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .table-row td {
            padding: 15px 12px;
            vertical-align: middle;
            border: none;
            font-size: 0.95rem;
        }

    .quantity-badge {
        background: linear-gradient(135deg, #e9ecef, #dee2e6);
        color: #495057;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        font-family: 'Courier New', monospace;
    }

    .price-cell {
        font-weight: 600;
        color: #2c5530;
        font-family: 'Courier New', monospace;
        font-size: 0.95rem;
    }

    .total-price-cell {
        font-weight: 700;
        color: #28a745;
        font-family: 'Courier New', monospace;
        font-size: 1rem;
    }

    .order-badge {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        padding: 6px 12px;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 600;
        font-family: 'Courier New', monospace;
    }

    .action-buttons {
        white-space: nowrap;
        text-align: center;
    }

        .action-buttons .btn {
            margin: 0 2px;
            border-radius: 8px;
            font-size: 0.8rem;
            padding: 6px 10px;
            transition: all 0.3s ease;
            border: 2px solid;
        }

            .action-buttons .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 10px 20px;
        font-weight: 600;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        }

    /* Responsive design */
    @@media (max-width: 768px) {
        .page-header {
            margin: -1rem -1rem 2rem -1rem;
            padding: 1.5rem 1rem;
            border-radius: 0 0 15px 15px;
        }

            .page-header h1 {
                font-size: 2rem;
            }

        .card-header {
            padding: 1rem;
        }

        .table {
            table-layout: auto;
        }

        .table-header th {
            width: auto !important;
            padding: 12px 8px;
            font-size: 0.75rem;
        }

        .table-row td {
            padding: 12px 8px;
            font-size: 0.85rem;
        }

        .action-buttons .btn {
            display: inline-block;
            margin: 1px;
            padding: 4px 8px;
        }

        .btn-primary {
            padding: 8px 16px;
            font-size: 0.9rem;
        }
    }

    /* Animation for table rows */
    .table-row {
        animation: fadeInUp 0.5s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

