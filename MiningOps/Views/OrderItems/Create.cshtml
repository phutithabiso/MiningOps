@model MiningOps.Entity.OrderItem

@{
    ViewData["Title"] = "Create Order Item";
}
<partial name="_Messages" />

<div class="page-header">
    <h1><i class="fas fa-box-open"></i> Create Order Item</h1>
    <p class="lead">Add a new item to purchase order</p>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-plus-circle"></i> Item Details</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" class="styled-form">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="ItemName" class="form-label">
                            <i class="fas fa-tag"></i> Item Name
                        </label>
                        <input asp-for="ItemName" class="form-control styled-input" placeholder="Enter item name" />
                        <span asp-validation-for="ItemName" class="text-danger validation-message"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Quantity" class="form-label">
                            <i class="fas fa-sort-numeric-up"></i> Quantity
                        </label>
                        <input asp-for="Quantity" type="number" class="form-control styled-input" min="1" value="1" />
                        <span asp-validation-for="Quantity" class="text-danger validation-message"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="UnitPrice" class="form-label">
                            <i class="fas fa-money-bill-wave"></i> Unit Price
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="UnitPrice" type="number" step="0.01" class="form-control styled-input" placeholder="0.00" />
                        </div>
                        <span asp-validation-for="UnitPrice" class="text-danger validation-message"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="PurchaseOrderId" class="form-label">
                            <i class="fas fa-file-invoice-dollar"></i> Purchase Order
                        </label>
                        <select asp-for="PurchaseOrderId" asp-items="ViewBag.PurchaseOrderId" class="form-control styled-select">
                            <option value="">-- Select Purchase Order --</option>
                        </select>
                        <span asp-validation-for="PurchaseOrderId" class="text-danger validation-message"></span>
                    </div>
                </div>
            </div>

            <!-- Price Calculation Preview -->
            <div class="price-preview-card p-3 rounded mb-4">
                <h6><i class="fas fa-calculator"></i> Price Preview</h6>
                <div class="row text-center">
                    <div class="col-4">
                        <div class="price-item">
                            <div class="price-label">Unit Price</div>
                            <div id="unitPricePreview" class="price-value">$0.00</div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="price-item">
                            <div class="price-label">Quantity</div>
                            <div id="quantityPreview" class="price-value">0</div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="price-item">
                            <div class="price-label">Total</div>
                            <div id="totalPricePreview" class="price-value total-amount">$0.00</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fas fa-save"></i> Save Item
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const quantityInput = document.querySelector('input[name="Quantity"]');
            const unitPriceInput = document.querySelector('input[name="UnitPrice"]');
            const unitPricePreview = document.getElementById('unitPricePreview');
            const quantityPreview = document.getElementById('quantityPreview');
            const totalPricePreview = document.getElementById('totalPricePreview');

            function updatePricePreview() {
                const quantity = parseFloat(quantityInput.value) || 0;
                const unitPrice = parseFloat(unitPriceInput.value) || 0;
                const total = quantity * unitPrice;

                unitPricePreview.textContent = '$' + unitPrice.toFixed(2);
                quantityPreview.textContent = quantity;
                totalPricePreview.textContent = '$' + total.toFixed(2);
            }

            quantityInput.addEventListener('input', updatePricePreview);
            unitPriceInput.addEventListener('input', updatePricePreview);

            // Initialize preview
            updatePricePreview();
        });
    </script>
}

