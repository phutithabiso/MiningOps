@model IEnumerable<MiningOps.Entity.PurchaseOrder>

@{
    ViewData["Title"] = "Index";
}

<div class="page-header">
    <h1><i class="fas fa-file-invoice-dollar"></i> Purchase Orders</h1>
    <p class="lead">Manage and track all purchase orders</p>
</div>

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-list"></i> Purchase Orders List</h5>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus-circle"></i> Create New
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-container">
            <table class="table table-striped table-hover">
                <thead class="table-header">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Supplier)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Requester)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Currency)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedAt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ExpectedDeliveryDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MaterialRequest)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-row">
                            <td>
                                @Html.DisplayFor(modelItem => item.Supplier.CompanyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Requester.FullName)
                            </td>
                            <td>
                                <span class="currency-badge">@Html.DisplayFor(modelItem => item.Currency)</span>
                            </td>
                            <td>
                                <span class="status-badge status-@item.Status.ToString().ToLower()">
                                    @Html.DisplayFor(modelItem => item.Status)
                                </span>
                            </td>
                            <td>
                                @item.CreatedAt.ToString("MMM dd, yyyy")
                            </td>
                            <td>
                                @(item.ExpectedDeliveryDate?.ToString("MMM dd, yyyy") ?? "Not set")
                            </td>
                            <td class="amount-cell">
                                @Html.DisplayFor(modelItem => item.TotalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaterialRequest.ItemName)
                            </td>
                            <td class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-sm btn-outline-primary" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-outline-info" title="Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        margin: -2rem -2rem 2rem -2rem;
        border-radius: 0 0 20px 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .page-header h1 {
            margin: 0;
            font-weight: 700;
            font-size: 2.5rem;
        }

        .page-header .lead {
            opacity: 0.9;
            margin: 0.5rem 0 0 0;
            font-size: 1.2rem;
        }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        margin-bottom: 2rem;
    }

    .card-header {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        border-radius: 15px 15px 0 0 !important;
        padding: 1.5rem;
        border: none;
    }

        .card-header h5 {
            margin: 0;
            font-weight: 600;
            font-size: 1.3rem;
        }

    .card-body {
        padding: 0;
    }

    .table-container {
        background: white;
        border-radius: 0 0 15px 15px;
        width: 100%;
        overflow: visible;
    }

    .table {
        width: 100%;
        margin-bottom: 0;
        border-collapse: collapse;
        table-layout: fixed;
    }

    .table-header {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        color: #495057;
    }

        .table-header th {
            padding: 15px 8px;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
            border: none;
            border-bottom: 2px solid #dee2e6;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

            /* Set specific column widths for better fit */
            .table-header th:nth-child(1), /* Supplier */
            .table-header th:nth-child(2) { /* Requester */
                width: 12%;
            }

            .table-header th:nth-child(3), /* Currency */
            .table-header th:nth-child(4) { /* Status */
                width: 8%;
            }

            .table-header th:nth-child(5), /* Created At */
            .table-header th:nth-child(6) { /* Expected Delivery */
                width: 10%;
            }

            .table-header th:nth-child(7) { /* Total Amount */
                width: 9%;
            }

            .table-header th:nth-child(8) { /* Material Request */
                width: 15%;
            }

            .table-header th:nth-child(9) { /* Actions */
                width: 10%;
            }

    .table-row {
        transition: all 0.3s ease;
        border-bottom: 1px solid #f0f0f0;
    }

        .table-row:hover {
            background-color: #f8f9fa;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .table-row td {
            padding: 12px 8px;
            vertical-align: middle;
            border: none;
            font-size: 0.9rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

    .status-badge {
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: capitalize;
        letter-spacing: 0.3px;
        display: inline-block;
        text-align: center;
        min-width: 70px;
    }

    .status-pending {
        background: linear-gradient(135deg, #fff3cd, #ffeaa7);
        color: #856404;
        border: 1px solid #ffeaa7;
    }

    .status-approved {
        background: linear-gradient(135deg, #d1ecf1, #b8daff);
        color: #0c5460;
        border: 1px solid #b8daff;
    }

    .status-completed {
        background: linear-gradient(135deg, #d4edda, #c3e6cb);
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .status-cancelled {
        background: linear-gradient(135deg, #f8d7da, #f5c6cb);
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .currency-badge {
        background: linear-gradient(135deg, #e9ecef, #dee2e6);
        color: #495057;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 0.7rem;
        font-weight: 600;
        font-family: 'Courier New', monospace;
        display: inline-block;
        text-align: center;
        min-width: 45px;
    }

    .amount-cell {
        font-weight: 700;
        color: #2c5530;
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
    }

    .action-buttons {
        white-space: nowrap;
        text-align: center;
    }

        .action-buttons .btn {
            margin: 0 2px;
            border-radius: 6px;
            font-size: 0.75rem;
            padding: 4px 8px;
            transition: all 0.3s ease;
            border: 1px solid;
            width: 32px;
            height: 32px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .action-buttons .btn:hover {
                transform: translateY(-1px);
                box-shadow: 0 2px 6px rgba(0,0,0,0.2);
            }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 10px 20px;
        font-weight: 600;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        }

    /* Responsive design */
    @@media (max-width: 1200px) {
        .table-header th {
            font-size: 0.75rem;
            padding: 12px 6px;
        }

        .table-row td {
            font-size: 0.85rem;
            padding: 10px 6px;
        }

        .status-badge {
            font-size: 0.65rem;
            min-width: 60px;
            padding: 3px 6px;
        }

        .currency-badge {
            font-size: 0.65rem;
            min-width: 40px;
        }
    }

    @@media (max-width: 768px) {
        .page-header {
            margin: -1rem -1rem 2rem -1rem;
            padding: 1.5rem 1rem;
            border-radius: 0 0 15px 15px;
        }

            .page-header h1 {
                font-size: 2rem;
            }

        .card-header {
            padding: 1rem;
        }

        .table {
            table-layout: auto;
        }

        .table-header th {
            width: auto !important;
        }
    }

    /* Animation for table rows */
    .table-row {
        animation: fadeInUp 0.5s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<!-- Font Awesome Icons -->
