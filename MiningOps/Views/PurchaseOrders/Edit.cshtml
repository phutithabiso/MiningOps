@model MiningOps.Entity.PurchaseOrder

@{
    ViewData["Title"] = "Edit Purchase Order";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-file-invoice-dollar"></i> Edit Purchase Order</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="OrderId" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="SupplierId" class="form-label"><i class="fas fa-truck"></i> Supplier</label>
                        <select asp-for="SupplierId" class="form-select" asp-items="ViewBag.SupplierId">
                            <option value="">-- Select Supplier --</option>
                        </select>
                        <span asp-validation-for="SupplierId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="RequestedBy" class="form-label"><i class="fas fa-user"></i> Requested By</label>
                        <select asp-for="RequestedBy" class="form-select" asp-items="ViewBag.RequestedBy">
                            <option value="">-- Select Requester --</option>
                        </select>
                        <span asp-validation-for="RequestedBy" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Currency" class="form-label"><i class="fas fa-money-bill-wave"></i> Currency</label>
                        <input asp-for="Currency" class="form-control" />
                        <span asp-validation-for="Currency" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TotalAmount" class="form-label"><i class="fas fa-calculator"></i> Total Amount</label>
                        <input asp-for="TotalAmount" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="TotalAmount" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label"><i class="fas fa-tasks"></i> Status</label>
                        <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<MiningOps.Entity.roleFolder.OrderStatus>()"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ExpectedDeliveryDate" class="form-label"><i class="fas fa-calendar-check"></i> Expected Delivery Date</label>
                        <input asp-for="ExpectedDeliveryDate" type="date" class="form-control" />
                        <span asp-validation-for="ExpectedDeliveryDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MaterialRequestId" class="form-label"><i class="fas fa-list-alt"></i> Material Request</label>
                        <select asp-for="MaterialRequestId" class="form-select" asp-items="ViewBag.MaterialRequestId">
                            <option value="">-- Select Material Request --</option>
                        </select>
                        <span asp-validation-for="MaterialRequestId" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <input type="submit" value="Save Changes" class="btn btn-success me-2" />
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

